<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">
                Account Register
            </h3>
            <form action="/users/register" method='post'>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" class='form-control' name='name' required value={{name}}>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class='form-control' name='email' required value={{email}}>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class='form-control' name='password' required value={{password}}>
                </div>
                <div class="form-group">
                    <label for="password2">Password</label>
                    <input type="password" class='form-control' name='password2' required value={{password2}}>
                </div>
                <button class="btn btn-primary" type='submit'>Submit</button>
            </form>
        </div>
    </div>

</div>